<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="together.study.user.adapter.UserMapper">

    <insert id="addUser" parameterType="swag.marine.model.User">
        INSERT INTO user (user_id,password,name,phone_number)
        VALUES ( #{userId},#{password},#{name},#{phoneNumber} )
    </insert>

    <select id="idDuplicateCheck" parameterType="string">
        SELECT count(user_id)
        FROM user
        WHERE user_id = #{userID}
    </select>


</mapper>